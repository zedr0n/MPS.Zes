/// <filename>
///     RootInfoQueryHandler.cs
/// </filename>

namespace ZES.Tests.Domain.Queries
{
  public class RootInfoQueryHandler : QueryHandlerBaseEx<RootInfoQuery,RootInfo,RootInfoProjection.Results>
  {
    public RootInfoQueryHandler(IProjection<RootInfoProjection.Results> projection) : base(projection) 
    {
    }  
    protected override RootInfo Handle (IProjection<RootInfoProjection.Results> projection, RootInfoQuery query)
    {
      return new RootInfo(command.Id, command.CreatedAt, command.UpdatedAt, command.NumberOfUpdates);
    }
  }
}

